<model xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.cems.uwe.ac.uk/xmlwiki/ER/model.xsd" name="Lost Toys" quote-names="true"> 

<entity name="item">
	<comment>Although this model is simple, I haven't found that it limited what I was able to do with the site.</comment>
	<attribute name="item_type" type="varchar(40)"/>
	<attribute name="location_lost" type="varchar(40)" />
	<attribute name="date_lost" type="date" />
	<attribute name="circumstances" type="varchar(255)" />
	<attribute name="description" type="text" />
	<attribute name="colour" type="varchar(30)" />
	<attribute name="features" type="varchar(150)" />
	<attribute name="image" type="varchar(255)" />
</entity>

<entity name="owner">
	<attribute name="fname" />
	<attribute name="sname" />
	<attribute name="email" type="varchar(255)" />
</entity>

<relationship name="owns">
	<role entity="owner" min="1" max="1" />
	<role entity="item" min="1" max="N" />
</relationship>

</model>