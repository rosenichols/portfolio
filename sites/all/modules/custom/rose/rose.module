}


function rose_preprocess_node(&$vars) {

  if ($vars['type'] == 'post') {

    if (!empty($vars['field_post_portrait_img'])) {
      $vars['classes_array'][] = 'portrait-img';
    }

    if ($vars['view_mode'] == 'full') {
      $vars['classes_array'][] = 'node-full';
    }
  }
}

/**
 * Implements hook_menu().
 */
function rose_menu() {
  $items = array();

  $items['contact'] = array(
    'title' => 'Contact',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('rose_message_form'),
    'access callback' => TRUE,
    'file' => 'rose.contact.inc',
    'type' => MENU_CALLBACK
  );

  return $items;
}


/**
 * Implements hook_mail().
 */
function rose_mail($key, &$message, $params) {
  switch ($key) {
    case 'contact_form':
      $message['subject'] = t('Contact form submission');
      $message['body'][] = $params['body'];
      break;
  }
}