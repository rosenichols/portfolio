/**
 * Implements hook_init().
 */
function rose_init() {

  // Load the includes for the module
  module_load_include('inc', 'rose', 'rose.form');
  module_load_include('inc', 'rose', 'rose.blocks');
  module_load_include('inc', 'rose', 'rose.contact');

}


/**
 * Implements hook_preprocess_page().
 */
function rose_preprocess_page(&$vars) {
  //drupal_add_css('http://fonts.googleapis.com/css?family=Pontano+Sans|Karla', array('group' => CSS_THEME, 'weight' => 115, 'preprocess' => FALSE));
  drupal_add_js('sites/all/themes/rosenichols/js/jquery.autosize.min.js', 'file');
